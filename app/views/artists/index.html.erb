<div class= "centering">
  <h1>Artists</h1>

  <% @artists.each do |artist| %>
    <h4>
      <%= link_to artist.name, artist_path(artist.id) %>
        <div class="image">
        <% artist.photos.each do |photo| %>
        <hr />
        <%= image_tag photo.image.thumbnail %>
        <% end %>
        </div>
    </h4>
  <% end %>
</div>
