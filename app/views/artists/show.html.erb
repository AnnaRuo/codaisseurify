<h1><%= @artist.name %></h1>

<h2>List of songs:</h2>

<% @artist.songs.each do |song| %>
  <li>
    <%= song.title %>
  </li>
<% end %>

<p>Age: <%= @artist.age %></p>
<p>Country: <%= @artist.country %></p>

<%= link_to "Back", root_path %>
<%= link_to "Add new song", new_artist_song_path(@artist.id), class: "btn btn-primary" %>
